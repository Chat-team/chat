<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- home page -->
    <welcome-file-list>
        <welcome-file>w/index.html</welcome-file>
    </welcome-file-list>

    <!-- wrap default servlet to solve the conflict with websocket -->
    <servlet>
        <servlet-name>defaultwrapper</servlet-name>
        <servlet-class>chat.DefaultWrapper</servlet-class>
    </servlet>

    <!-- static resource files -->
    <servlet-mapping>
        <servlet-name>defaultwrapper</servlet-name>
        <url-pattern>/static/*</url-pattern>
    </servlet-mapping>

    <!-- static resource files -->
    <servlet-mapping>
        <servlet-name>defaultwrapper</servlet-name>
        <url-pattern>/w/*</url-pattern>
    </servlet-mapping>

    <!-- login -->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>chat.Login</servlet-class>
    </servlet>

    <!-- login servlet -->
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

</web-app>
