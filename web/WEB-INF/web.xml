<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- home page -->
    <welcome-file-list>
        <welcome-file>/w/index.html</welcome-file>
    </welcome-file-list>

    <!-- wrap default servlet to solve the conflict with websocket -->
    <servlet>
        <servlet-name>defaultwrapper</servlet-name>
        <servlet-class>chat.DefaultWrapper</servlet-class>
    </servlet>

    <!-- static resource files -->
    <servlet-mapping>
        <servlet-name>defaultwrapper</servlet-name>
        <url-pattern>/static/*</url-pattern>
    </servlet-mapping>

    <!-- static resource files -->
    <servlet-mapping>
        <servlet-name>defaultwrapper</servlet-name>
        <url-pattern>/w/*</url-pattern>
    </servlet-mapping>

    <!-- login -->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>chat.Login</servlet-class>
    </servlet>

    <!-- login servlet -->
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- register -->
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>chat.Register</servlet-class>
    </servlet>

    <!-- register servlet -->
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- modify -->
    <servlet>
        <servlet-name>modify</servlet-name>
        <servlet-class>chat.Modify</servlet-class>
    </servlet>

    <!-- modify servlet -->
    <servlet-mapping>
        <servlet-name>modify</servlet-name>
        <url-pattern>/modify</url-pattern>
    </servlet-mapping>

    <!-- constructchatroom -->
    <servlet>
        <servlet-name>constructchatroom</servlet-name>
        <servlet-class>chat.ConstructChatroom</servlet-class>
    </servlet>

    <!-- constructchatroom servlet -->
    <servlet-mapping>
        <servlet-name>constructchatroom</servlet-name>
        <url-pattern>/constructchatroom</url-pattern>
    </servlet-mapping>

    <!-- constructgroup -->
    <servlet>
        <servlet-name>constructgroup</servlet-name>
        <servlet-class>chat.ConstructGroup</servlet-class>
    </servlet>

    <!-- constructgroup servlet -->
    <servlet-mapping>
        <servlet-name>constructgroup</servlet-name>
        <url-pattern>/constructgroup</url-pattern>
    </servlet-mapping>

    <!-- querygroup -->
    <servlet>
        <servlet-name>querygroup</servlet-name>
        <servlet-class>chat.QueryGroup</servlet-class>
    </servlet>

    <!-- querygroup servlet -->
    <servlet-mapping>
        <servlet-name>querygroup</servlet-name>
        <url-pattern>/querygroup</url-pattern>
    </servlet-mapping>

    <!-- querychatroom -->
    <servlet>
        <servlet-name>querychatroom</servlet-name>
        <servlet-class>chat.QueryChatroom</servlet-class>
    </servlet>

    <!-- querychatroom servlet -->
    <servlet-mapping>
        <servlet-name>querychatroom</servlet-name>
        <url-pattern>/querychatroom</url-pattern>
    </servlet-mapping>

</web-app>
